{
  "name": "ChameleonPlayer",
  "version": "2.0.0",
  "description": "Play video transparently full screen while working in the background",
  "main": "main.js",
  "homepage": "https://www.cinqmarsmedia.com/",
  "scripts": {
    "start": "electron . --enable-logging --remote-debugging-port='8315'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps && node scripts/fix-electron-frameworks.js",
    "v": "electron -v",
    "lint": "npm run lint:js && npm run lint:format",
    "lint:fix": "npm run lint:js:fix && npm run lint:format:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "lint:format": "prettier --check --ignore-path .prettierignore .",
    "lint:format:fix": "prettier --write --ignore-path .prettierignore .",
    "prepare": "husky"
  },
  "build": {
    "electronVersion": "34.5.8",
    "productName": "Chameleon Player",
    "electronDist": "./node_modules/electron/dist/",
    "appId": "com.cinqmarsmedia.chameleon",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "./build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Cinq-Mars Media",
      "icon": "./build/icons"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always"
    }
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "electron-storage": "^1.0.7",
    "menubar": "^9.5.0"
  },
  "author": {
    "name": "Christopher Cinq-Mars Jarvis",
    "email": "info@cinqmarsmedia.com"
  },
  "license": "",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "github:castlabs/electron-releases#v34.5.8+wvcus",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
